<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span9">
    <%= image_tag(@note.picture_url, :width => "100%") if @note.picture.present? %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @note.title %></p>
    <p><b>Description: </b><%= @note.description %></p>
    <p>
      <%= link_to 'Edit', edit_note_path(@note) %> |
      <%= link_to 'Destroy', @note, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', notes_path %>
    </p>
  </div>
  <div class="span3">
    <h3>Comments</h3>
    <% @note.comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br />
        <p><%= comment.body %><p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>
</div>